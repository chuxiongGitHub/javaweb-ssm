<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rainbow.mapper.ItemsMapper">
    <select id="findItemsById" parameterType="int" resultType="com.rainbow.entity.Items">
        select * from items where id=#{id}
    </select>
    <!--多条件查询-->
    <select id="findByName" parameterType="com.rainbow.entity.ItemsQueryVo"
            resultType="com.rainbow.entity.ItemsCustomer">

        select * from  items
        where
        items.price=#{itemsCustomer.price} and items.detail like #{itemsCustomer.detail}
    </select>

    <!--动态SQL语句-->
    <select id="findByIf" parameterType="com.rainbow.entity.ItemsQueryVo" resultType="com.rainbow.entity.ItemsCustomer">
        select * from items
        <where>
            <if test="itemsCustomer.price!=null and itemsCustomer.price!=''">
                and items.price=#{itemsCustomer.price}
            </if>
            <if test="itemsCustomer.detail!=null and itemsCustomer.detail!=''">
                and items.detail like '%${itemsCustomer.detail}%'
            </if>
        </where>
    </select>
</mapper>